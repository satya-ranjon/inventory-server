{
  "name": "inventory-management-api",
  "version": "1.0.0",
  "description": "A robust backend API for inventory management built with Node.js, Express, TypeScript, and MongoDB",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed": "ts-node src/scripts/seed.ts",
    "db:reset": "ts-node src/scripts/resetDb.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/satya-ranjon/inventory-server"
  },
  "keywords": [
    "inventory",
    "management",
    "api",
    "typescript",
    "express",
    "mongodb",
    "mongoose",
    "jwt"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.3",
    "morgan": "^1.10.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.19",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "bugs": {
    "url": "https://github.com/your-username/inventory-management-api/issues"
  },
  "homepage": "https://github.com/your-username/inventory-management-api#readme"
}
